# OpenClip Pro Backend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for encryption and sessions (generate a secure random key)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_change_this_in_production

# Session timeout in seconds (24 hours = 86400)
SESSION_TIMEOUT=86400

# Maximum failed login attempts before lockout
MAX_FAILED_ATTEMPTS=5

# Lockout duration in seconds (15 minutes = 900)
LOCKOUT_DURATION=900

# =============================================================================
# AI API KEYS (Optional - can be set via UI)
# =============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# LM Studio Configuration (for local AI models)
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_API_KEY=  # Usually not required for local LM Studio

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================

# Maximum file size in bytes (500MB = 524288000)
MAX_FILE_SIZE=524288000

# Upload directory (relative to backend root)
UPLOAD_DIR=uploads

# Temporary files directory
TEMP_DIR=temp

# Allowed video file extensions (comma-separated)
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv,.wmv,.flv,.webm,.m4v,.3gp,.ogv,.ts,.mts,.m2ts

# Allowed audio file extensions (comma-separated)
ALLOWED_AUDIO_EXTENSIONS=.mp3,.wav,.aac,.flac,.ogg,.m4a,.wma

# Allowed image file extensions (comma-separated)
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.bmp,.tiff,.webp,.svg

# =============================================================================
# VIDEO PROCESSING
# =============================================================================

# FFmpeg binary path (leave empty to use system PATH)
FFMPEG_PATH=

# FFprobe binary path (leave empty to use system PATH)
FFPROBE_PATH=

# Default video quality for exports
DEFAULT_VIDEO_QUALITY=high

# Maximum video duration for processing (in seconds, 0 = no limit)
MAX_VIDEO_DURATION=0

# =============================================================================
# YOUTUBE PROCESSING
# =============================================================================

# YouTube download quality preference
YOUTUBE_QUALITY=best[height<=1080]

# YouTube download format preference
YOUTUBE_FORMAT=mp4

# Maximum YouTube video duration (in seconds, 0 = no limit)
MAX_YOUTUBE_DURATION=3600

# =============================================================================
# AI ANALYSIS SETTINGS
# =============================================================================

# Default AI provider (openai, gemini, lmstudio)
DEFAULT_AI_PROVIDER=openai

# Default model for each provider
DEFAULT_OPENAI_MODEL=gpt-4-turbo
DEFAULT_GEMINI_MODEL=gemini-1.5-pro
DEFAULT_LMSTUDIO_MODEL=local-model

# AI analysis timeout in seconds
AI_ANALYSIS_TIMEOUT=300

# Maximum tokens for AI responses
MAX_AI_TOKENS=4096

# AI temperature setting (0.0 to 1.0)
AI_TEMPERATURE=0.7

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limits (requests per minute)
OPENAI_RATE_LIMIT=60
GEMINI_RATE_LIMIT=60
LMSTUDIO_RATE_LIMIT=1000

# Token rate limits (tokens per minute)
OPENAI_TOKEN_LIMIT=90000
GEMINI_TOKEN_LIMIT=32000
LMSTUDIO_TOKEN_LIMIT=100000

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers
CORS_HEADERS=*

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=

# Maximum log file size in MB
MAX_LOG_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE (Optional - for future use)
# =============================================================================

# Database URL (SQLite example)
# DATABASE_URL=sqlite:///./openclip.db

# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost/openclip

# MySQL example:
# DATABASE_URL=mysql://user:password@localhost/openclip

# =============================================================================
# REDIS (Optional - for caching and sessions)
# =============================================================================

# Redis URL for caching
# REDIS_URL=redis://localhost:6379/0

# Redis session store
# REDIS_SESSION_URL=redis://localhost:6379/1

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1

# Google Cloud Storage
# GCS_BUCKET=
# GCS_CREDENTIALS_PATH=

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_CONTAINER_NAME=

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=

# Google Analytics tracking ID
# GA_TRACKING_ID=

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

# SMTP settings for email notifications
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_USE_TLS=True
# FROM_EMAIL=noreply@openclippro.com

# =============================================================================
# WEBHOOK SETTINGS (Optional)
# =============================================================================

# Webhook URL for processing completion notifications
# WEBHOOK_URL=

# Webhook secret for verification
# WEBHOOK_SECRET=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of worker processes for video processing
VIDEO_WORKER_PROCESSES=2

# Maximum concurrent AI analysis requests
MAX_CONCURRENT_ANALYSIS=3

# File cleanup interval in hours
CLEANUP_INTERVAL=24

# Temporary file max age in hours
TEMP_FILE_MAX_AGE=24

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_YOUTUBE_DOWNLOAD=True
ENABLE_AI_ANALYSIS=True
ENABLE_CLIP_EXPORT=True
ENABLE_THUMBNAIL_GENERATION=True
ENABLE_AUDIO_EXTRACTION=True
ENABLE_SUBTITLE_EXTRACTION=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable API documentation
ENABLE_DOCS=True

# Enable development tools
ENABLE_DEV_TOOLS=True

# Mock AI responses for testing
MOCK_AI_RESPONSES=False

# Skip file validation for testing
SKIP_FILE_VALIDATION=False